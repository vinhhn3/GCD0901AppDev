@using GCD0901AppDev.DTOs.Responses
@model DetailsTodoResponse

<div class="form-group">
  <a asp-controller="Todoes" asp-action="Index" class="btn btn-primary">
    Back to Index
  </a>
</div>

<div class="card" style="width:200px">
  <img src="@Model.ImageUrl"/>
  <div class="card-body">
    <h4 class="card-title">@Model.Description</h4>
    <p class="card-text">Created At: @Model.CreatedAt.ToShortDateString()</p>
    <p class="card-text">Status: @Model.Status.ToString()</p>
    <p class="card-text">Category: @Model.CategoryDescription</p>

  </div>
</div>