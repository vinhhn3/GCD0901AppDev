@using GCD0901AppDev.Enums
@using GCD0901AppDev.ViewModels
@model TodoCategoriesViewModel

<h1>Create a new Todo</h1>

<form asp-controller="Todoes" asp-action="Edit" method="post">
  <input asp-for="@Model.Todo.Id" type="hidden" value="@Model.Todo.Id" />
  <div class="form-group">
    <label>Description</label>
    <input asp-for="Todo.Description" class="form-control" placeholder="Todo Description ..." />
    <span asp-validation-for="Todo.Description" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label>Status</label>
    <select asp-for="Todo.Status" asp-items="Html.GetEnumSelectList<TodoStatus>()" class="form-control">
    </select>
  </div>
    <div class="form-group">
    <label>Category</label>
      <select 
        asp-for="Todo.CategoryId" 
        asp-items="@(new SelectList(Model.Categories, "Id", "Description"))" 
        class="form-control">
      </select>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Edit</button>
  </div>
</form>