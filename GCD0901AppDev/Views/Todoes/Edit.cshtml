@using GCD0901AppDev.Enums
@model Todo

<h1>Create a new Todo</h1>

<form asp-controller="Todoes" asp-action="Edit" method="post">
  @*<input asp-for="Id" type="hidden" value=@Model.Id />*@
  <div class="form-group">
    <label>Description</label>
    <input asp-for="Description" class="form-control" placeholder="Todo Description ..." />
  </div>
  <div class="form-group">
    <label>Status</label>
    <select asp-for="Status" asp-items="Html.GetEnumSelectList<TodoStatus>()" class="form-control">
    </select>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Edit</button>
  </div>
</form>